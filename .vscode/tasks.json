{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "gprbuild",
			"args": [
				"-P",
				"libAnne.gpr",
				"-p",
				"-j8"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "clean",
			"type": "shell",
			"command": "gprclean",
			"args": [
				"-P",
				"libAnne.gpr"
			],
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "metrics",
			"type": "shell",
			"command": "gnatmetric",
			"args": [
				"-P",
				"libAnne.gpr"
			],
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "build tests",
			"type": "shell",
			"command": "gprbuild",
			"args": [
				"-P",
				"tests/Tests.gpr",
				"-p"
			],
			"group": "test",
			"problemMatcher": []
		}
	]
}